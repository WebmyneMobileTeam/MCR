<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    android:orientation="vertical"
    android:background="@color/primaryColor"
    tools:context="com.webmyne.myclassroom.HomeActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_gravity="left|center_vertical"
            android:padding="16dp"
            android:background="#fff"
            android:gravity="center"
            android:text="App\nLogo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/primaryColor"
            android:textSize="12sp" />

        <TextView
            android:layout_gravity="right|center_vertical"
            android:padding="16dp"
            android:background="#fff"
            android:gravity="center"
            android:text="Uni\nLogo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/primaryColor"
            android:textSize="12sp" />
        
        
    </FrameLayout>

    <LinearLayout
        android:layout_marginTop="16dp"
        android:gravity="right|center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:text="Welcome Bob"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:textSize="24sp" />

        <TextView
            android:text="Monday Dec 11, 2014"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:textSize="18sp" />

        <TextView
            android:text="11:00 AM"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:textSize="18sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:layout_margin="1dp"
            android:background="#fff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="College News"
            android:textColor="@color/primaryColor"
            android:layout_weight="1" />

        <Button
            android:layout_margin="1dp"
            android:textColor="@color/primaryColor"
            android:background="#fff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Schedule"
            android:layout_weight="1" />


    </LinearLayout>

    <ListView
        android:layout_marginTop="16dp"
        android:id="@+id/listPrograms"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:dividerHeight="1dp" />


</LinearLayout>